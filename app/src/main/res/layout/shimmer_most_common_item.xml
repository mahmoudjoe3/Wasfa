<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_90sdp"
    android:layout_height="@dimen/_140sdp"
    app:cardCornerRadius="@dimen/standered_margin"
    android:layout_margin="@dimen/post_username_margin"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView android:id="@+id/post_top_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#ABEFEFEF" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_user_image"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginStart="@dimen/post_username_margin"
            android:layout_marginTop="@dimen/post_username_margin"
            android:scaleType="centerCrop"
            android:background="@drawable/circle"
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/post_username"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/post_margin"
            android:layout_toEndOf="@id/post_user_image"
            android:lines="1"
            android:maxLength="14"
            android:background="@drawable/circle"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/i1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/post_username_margin"
            android:layout_marginBottom="@dimen/post_username_margin"
            android:lines="1"
            android:maxLength="14"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/circle"
            android:textSize="7sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/i2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/post_username_margin"
            android:layout_marginBottom="@dimen/post_username_margin"
            android:layout_above="@id/i1"
            android:lines="1"
            android:maxLength="14"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circle"
            android:textSize="7sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/i3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/post_username_margin"
            android:layout_marginBottom="@dimen/post_username_margin"
            android:layout_above="@id/i2"
            android:lines="1"
            android:maxLength="14"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circle"
            android:textSize="7sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/i4"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/post_username_margin"
            android:layout_marginBottom="@dimen/post_username_margin"
            android:lines="1"
            android:maxLength="14"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/i3"
            android:background="@drawable/circle"
            android:textSize="7sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/t1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/post_username_margin"
            android:layout_marginBottom="@dimen/post_username_margin"
            android:lines="1"
            android:maxLength="14"
            android:layout_alignParentBottom="true"
            android:background="@drawable/circle"
            android:textSize="7sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/t2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/post_username_margin"
            android:layout_marginBottom="@dimen/post_username_margin"
            android:layout_above="@id/t1"
            android:lines="1"
            android:maxLength="14"
            android:background="@drawable/circle"
            android:textSize="7sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/t3"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/post_username_margin"
            android:layout_marginBottom="@dimen/post_username_margin"
            android:layout_above="@id/t2"
            android:lines="1"
            android:maxLength="14"
            android:background="@drawable/circle"
            android:textSize="7sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/t4"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/post_username_margin"
            android:layout_marginBottom="@dimen/post_username_margin"
            android:lines="1"
            android:maxLength="14"
            android:layout_above="@id/t3"
            android:background="@drawable/circle"
            android:textSize="7sp"
            android:textStyle="bold"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>