<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_90sdp"
    android:layout_height="@dimen/_140sdp"
    app:cardCornerRadius="@dimen/standered_margin"
    android:layout_margin="@dimen/post_username_margin"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView android:id="@+id/post_top_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/food" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_user_image"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginStart="@dimen/post_username_margin"
            android:layout_marginTop="@dimen/post_username_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/thanos_mcu"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/post_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/post_margin"
            android:layout_toEndOf="@id/post_user_image"
            android:lines="1"
            android:maxLength="14"
            android:text="Thanos Ahmed mahmoud"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible"
            />


       <TextView android:id="@+id/post_caption"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:lines="6"
           android:text="@string/bio_test"
           android:layout_toStartOf="@id/lay"
           android:gravity="bottom"
           android:layout_alignParentBottom="true"
           android:layout_marginStart="@dimen/post_username_margin"
           android:layout_marginBottom="@dimen/post_username_margin"
           android:textSize="9sp"
           android:textColor="@color/white"/>
        <LinearLayout android:id="@+id/lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="1dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/post_username_margin"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="2dp"
                >

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="2dp"
                        android:padding="1dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_star" />

                    <TextView
                        android:id="@+id/post_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="3dp"
                        android:text="3.5"
                        android:textColor="@color/white"
                        android:textSize="7sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/black"
                android:layout_marginTop="@dimen/post_username_margin"
                app:cardCornerRadius="2dp">

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="2dp"
                        android:padding="1dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_love" />

                    <TextView
                        android:id="@+id/post_love_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="3dp"
                        android:text="325"
                        android:textColor="@color/white"
                        android:textSize="7sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="@dimen/post_username_margin"
                app:cardCornerRadius="2dp">

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="2dp"
                        android:padding="1dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_comment" />

                    <TextView
                        android:id="@+id/post_comment_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="3dp"
                        android:text="325"
                        android:textColor="@color/black"
                        android:textSize="7sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/post_username_margin"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="2dp">

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="2dp"
                        android:padding="1dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_share" />

                    <TextView
                        android:id="@+id/post_share_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="3dp"
                        android:text="325"
                        android:textColor="@color/black"
                        android:textSize="7sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>